# for users who don't have core.autocrlf set
* text=auto

# known text extensions
*.m text diff=matlab merge
*.py text diff=python merge
*.coveragerc text
*.css text
*.gitattributes text
*.gitignore text
*.htm text
*.html text
*.md text
*.php text
*.rst text
*.tex text
*.txt text

# Windows specific files to always have CRLF
*.bat text eol=crlf

# Unix files to always have LF
*.sh text eol=lf

# known binary files to not modify
*.docx binary
*.jpg binary
*.mat binary
*.pdf binary
*.png binary
*.pptx binary
*.pyc binary
*.pyx binary
*.xlsx binary

# files to ignore when creating zip file for download
/.gitattributes export-ignore
/.gitignore export-ignore
/data/rand_numbers.mat export-ignore
/data/randn_numbers.mat export-ignore